<local:DriverHomePageBase xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CabBook;assembly=CabBook" x:Class="CabBook.DriverHomePage" Title="Driver Home" BackgroundColor="#eeeeee">
  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="0" BackgroundColor="Orange">
    <local:HeaderView LeftText="Logout" LeftCommand="{Binding LogoutCommand}" HeaderText="Driver Home Page" RightCommand="{Binding AddCommand}"/>

    <Grid >
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--<Label BackgroundColor="Lime" TextColor="White" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Label1" HeightRequest="100"/>-->
      <!--<Label BackgroundColor="Purple" TextColor="White" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3"  Text="Label2" HeightRequest="100"/>-->
      <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Source="banner3.png" HeightRequest="400"></Image>
      <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black" Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="6"  Text="Post Your Rides And Make Others Happy" HeightRequest="100"/>


      <Label BackgroundColor="Teal" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="Car Details" HeightRequest="100">
        <Label.GestureRecognizers>
          <TapGestureRecognizer Command="{Binding CarDetailsCommand}"/>
        </Label.GestureRecognizers>
      </Label>
      <Label BackgroundColor="Teal" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3"  Text="Post Ride" HeightRequest="100">
        <Label.GestureRecognizers>
          <TapGestureRecognizer Command="{Binding PostRideCommand}"/>
        </Label.GestureRecognizers>
      </Label>

      <Label BackgroundColor="Teal" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="View Rides" HeightRequest="100">
        <Label.GestureRecognizers>
          <TapGestureRecognizer Command="{Binding ViewRideCommand}"/>
        </Label.GestureRecognizers>
      </Label>
      
