    <link rel="stylesheet" href="~/css/bootstrap-datepicker.min.css">
    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Modernizr JS -->
    <script src="~/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="gtco-loader"></div>
    <div id="page">
        <!-- <div class="page-inner"> -->
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div id="gtco-logo"><a href="index.html">Traveler <em>.</em></a></div>
                    </div>
                    <div class="col-xs-8 text-right menu-1">
                        <ul>
                            <li><a href="@Url.Action("Index","Driver")">Home</a></li>
                            <li><a href="@Url.Action("CarDetails","Driver")">Car Detail</a></li>
                            <li><a href="@Url.Action("PostRide","Driver")">Post Ride</a></li>
                            <li><a href="@Url.Action("ViewRides","Driver")">View Rides</a></li>
                            <li>
                                @if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                                    }
                                }
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>

        <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../images/RidePost.jpg); height: 400px;">
            <div class="overlay"></div>
            <div class="gtco-container">
                <div class="row">
                    <div class="col-md-12 col-md-offset-0 text-left">
                        <div class="row row-mt-5em">
                            <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                                <h1>See your past rides..</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="gtco-section border-bottom">
            <div class="gtco-container">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1" style="border: 1px solid silver;border-radius: 10px;padding: 25px;">
                        <div class="form-wrap">
                            <div class="tab-content-inner active" data-content="signup">
                                <h2 style="text-align:center;font-weight: bold;color: darkblue;">RIDES DETAILS</h2>
                                <hr />
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <tr style="    background-color: #07a798;
    color: white;">
                                            <th scope="col" style="text-align:center;">First Street</th>
                                            <th scope="col" style="text-align:center;">Second Street</th>
                                            <th scope="col" style="text-align:center;">Stat Time</th>
                                            <th scope="col" style="text-align:center;">Destintaion</th>
                                            <th scope="col" style="text-align:center;">Landmark</th>
                                            <th scope="col" style="text-align:center;">Active</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var md in Model)
                                        {
                                            <tr style="text-align:center;">
                                                <td>
                                                    @md.FirstStreet
                                                </td>
                                                <td>
                                                    @md.SecondStret
                                                </td>
                                                <td>
                                                    @md.StartTime
                                                </td>
                                                <td>
                                                    @md.Destination
                                                </td>
                                                <td>
                                                    @md.Landmark
                                                </td>
                                                <td>
                                                    @if (md.Active)
                                                    {<i class="glyphicon glyphicon-ok" style="color:green;"></i>}
                                                    else
                                                    { <i class="glyphicon glyphicon-remove" style="color:red;"></i>}
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- </div> -->
    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- countTo -->
    <script src="~/js/jquery.countTo.js"></script>
    <!-- Stellar Parallax -->
    <script src="~/js/jquery.stellar.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/magnific-popup-options.js"></script>

    <!-- Datepicker -->
    <script src="~/js/bootstrap-datepicker.min.js"></script>

    <!-- Main -->
    <script src="~/js/main.js"></script>
</body>
</html>
