<body>
    <div class="gtco-loader"></div>
    <div id="page">
        <!-- <div class="page-inner"> -->
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div id="gtco-logo"><a href="index.html">CabBook<em>.</em></a></div>
                    </div>
                    <div class="col-xs-8 text-right menu-1">
                        <ul>
                            <li><a href="@Url.Action("Index","Driver")">Home</a></li>
                            <li><a href="@Url.Action("CarDetails","Driver")">Car Detail</a></li>
                            <li><a href="@Url.Action("PostRide","Driver")">Post Ride</a></li>
                            <li><a href="@Url.Action("ViewRides","Driver")">View Rides</a></li>
                            <li>
                                @if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                                    }
                                }
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>

        <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../images/4.jpeg); height: auto;">
            <div class="overlay"></div>
            <div class="gtco-container">
                <div class="row">
                    <div class="col-md-12 col-md-offset-0 text-left">
                        <div class="row row-mt-5em">
                            <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                                <h1>A Real driver knows exactly what's in his car..</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="gtco-section border-bottom">
            <div class="gtco-container">
                <div class="row">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">@TempData["Message"]</div>
                    }
                    <div class="col-md-8 col-md-offset-2" style="border:1px solid silver;border-radius:10px;padding:25px;">
                        <div class="form-wrap">
                            <div class="tab-content-inner active" data-content="signup">
                                <h2 style="text-align:center;font-weight:bold;color:darkblue;">CAR DETAILS</h2>
                                @using (Html.BeginForm("CarDetails", "Driver", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <label for="fullname">Car Name*</label>
                                            @if (Model != null && Model.CarName != null)
                                            {
                                                <label class="form-control">@Model.CarName</label>
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => model.CarName, new { @class = "form-control", @placeholder = "Enter Car Name", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.CarName)
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <label for="fullname">License Number*</label>
                                            @if (Model != null && Model.LicenseNumber != null)
                                            {
                                                <label class="form-control">@Model.LicenseNumber</label>
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.LicenseNumber, new { @class = "form-control", @placeholder = "Enter LicenseNumber", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.LicenseNumber)
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <label for="fullname">License Type</label>
                                            @if (Model != null && Model.LicenseType != null)
                                            {
                                                <label class="form-control">@Model.LicenseType</label>
                                            }
                                            else
                                            {
                                                @Html.DropDownList("LicenseType", new List<SelectListItem>
                                                                            {
                                                                                new SelectListItem{ Text="G2", Value = "G2" },
                                                                                new SelectListItem{ Text="G", Value = "G" },
                                                                            }, new { @class = "form-control" })
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            <label for="fullname">Car Numer*</label>
                                            @if (Model != null && Model.CarNumer != null)
                                            {
                                                <label class="form-control">@Model.CarNumer</label>
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.CarNumer, new { @class = "form-control", @placeholder = "Enter Car Number", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.CarNumer)
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-12">
                                            @if (Model != null && Model.CarName != null && Model.BabySeat)
                                            {
                                                <label for="fullname">Baby Seat</label>
                                                <label class="form-control"><i class="glyphicon glyphicon-ok" style="color:green"></i></label>
                                            }
                                            else if (Model != null && Model.BabySeat)
                                            {
                                                <label for="fullname">Baby Seat</label>
                                                <label class="form-control"><i class="glyphicon glyphicon-remove" style="color:red"></i></label>
                                            }
                                            else
                                            {
                                                <label class="col-md-2" for="fullname">Baby Seat</label>
                                                @Html.CheckBoxFor(m => m.BabySeat, new { @class = "col-md-1", @style = "height : 25px;" })
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        @if (Model == null)
                                        {
                                            <div class="col-md-12">
                                                <input type="submit" class="btn btn-primary btn-block" value="SAVE">
                                            </div>
                                        }
                                        else
                                        {

                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- </div> -->
    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
